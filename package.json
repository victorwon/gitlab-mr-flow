{
  "name": "gitlab-mr-flow",
  "displayName": "GitLab MR Flow",
  "description": "Integrated workflow with GitLab Merge Request via git cli without using API tokens.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitlab-mr-flow.createMergeRequest"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitlab-mr-flow.createMergeRequest",
        "icon": "$(git-pull-request-create)",
        "title": "GitLab MR Flow: Create Merge Request"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "gitlab-mr-flow.createMergeRequest",
          "when": "scmProvider == git",
          "group": "navigation@99"
        }
      ]
    },
    "keybindings": [
      {
        "command": "gitlab-mr-flow.createMergeRequest",
        "key": "cmd+g m",
        "mac": "cmd+g m"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "execa": "^9.5.2"
  }
}
